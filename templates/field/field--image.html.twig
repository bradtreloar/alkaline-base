{%
  set classes = [
    'field',
    field_name|clean_class,
    field_type|clean_class,
  ]
%}
{% for item in items %}
<figure {{ attributes.addClass(classes) }}>
  <picture>
    {{ item.content }}
  </picture>
  {% if item.caption %}
    <figcaption>
      {{ item.caption }}
    </figcaption>
  {% endif %}
</figure>
{% endfor %}