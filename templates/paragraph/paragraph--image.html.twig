{% extends "paragraph--field-body.html.twig" %}
{#
/**
 * @file
 * Theme override for a paragraph type.
#}
{% block content %}
  <figure{{ attributes.addClass("image") }}>
    {{ content.field_image }}
    {% if content.field_caption %}
      <figcaption>
        {{ content.field_caption }}
      </figcaption>
    {% endif %}
  </figure>
{% endblock %}
