{% extends "paragraph.html.twig" %}
{#
/**
 * @file
 * Theme override for a paragraph type.
#}
{% block content %}
{%
  set classes = [
    'grid',
    'small-1',
  ]
%}
<figure {{ attributes.addClass(classes) }}>
  {{ content.field_image }}
  {% if content.field_caption %}
    <figcaption>
      {{ content.field_caption }}
    </figcaption>
  {% endif %}
</figure>
{% endblock %}
