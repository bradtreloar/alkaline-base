{% extends "paragraph.html.twig" %}
{#
/**
 * @file
 * Theme override for a paragraph type.
#}
{% block content %}
  {% if emphasised %}
    <div class="section emphasised">
  {% else %}
    <div class="section">
  {% endif %}
  <div class="row">
    <figure {{ attributes }}>
      {{ content.field_image }}
      {% if content.field_caption %}
        <figcaption>
          {{ content.field_caption }}
        </figcaption>
      {% endif %}
    </figure>
  </div>
{% endblock %}
