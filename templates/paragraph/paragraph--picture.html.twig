{% extends "paragraph.html.twig" %}
{#
/**
 * @file
 * Theme override for a paragraph type.
#}
{% block content %}
  <figure{{ attributes.addClass("image") }}>
    {{ content.field_image }}
    {% if content.field_caption and view_mode != "teaser" %}
      <figcaption>
        {{ content.field_caption }}
      </figcaption>
    {% endif %}
  </figure>
{% endblock %}
