{% extends "paragraph.html.twig" %}
{#
/**
 * @file
 * Theme override for the picture paragraph type.
 *
 * `image` class is for backwards compatibility.
 */
#}
{% block content %}
  <div class="picture">
    <figure>
      {{ content.field_image }}
      {% if content.field_caption|render and view_mode != "teaser" %}
        <figcaption>
          {{ content.field_caption }}
        </figcaption>
      {% endif %}
    </figure>
  </div>
{% endblock %}
