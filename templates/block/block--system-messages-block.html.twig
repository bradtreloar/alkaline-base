{#
/**
 * @file
 * Theme override for messages block.
 *
 * @todo Consider removing once theme no longer subclasses classy.
#}
{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {% block content %}
    {{ content }}
  {% endblock %}
</div>
