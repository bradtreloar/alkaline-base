{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block--hero-banner',
  ]
%}
{{ attach_library('alkaline/banner') }}
<header{{ attributes.addClass(classes) }}>
  <figure class="banner hero full-page dark-bg">
    <figcaption>
      {% block content %}
        {{ content|without('field_hero_background_image') }}
      {% endblock %}
    </figcaption>
  </figure>
</header>
{{ css }}

