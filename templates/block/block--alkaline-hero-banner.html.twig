{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block--hero-banner',
    'full-width',
  ]
%}
{{ attach_library('alkaline/hero_banner') }}
<header{{ attributes.addClass(classes) }}>
  <figure class="hero-banner">
    <figcaption>
      {% block content %}
        {{ content|without('field_hero_background_image') }}
      {% endblock %}
    </figcaption>
  </figure>
</header>
{{ background_css|raw }}

