{#
/**
 * @file
 * Theme override to display a node.
 */
#}
{{ attach_library('alkaline/article') }}
<article{{ attributes.addClass("teaser") }}>

  <header>
    {{ content.field_image }}

    <div class="title-bar">
      <h2{{ title_attributes }}>
        {{ label }}
      </h2>
    </div>
  </header>

  <section>

    {% if display_submitted %}
      <footer class="node__meta">
        {{ author_picture }}
        <div{{ author_attributes.addClass('node__submitted') }}>
          {% trans %}{{ author_name }}{{ date }}{% endtrans %}
          {{ metadata }}
        </div>
      </footer>
    {% endif %}

    {{ content|without('field_image') }}

  </section>

</article>
