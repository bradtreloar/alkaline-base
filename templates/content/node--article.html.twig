{#
/**
 * @file
 * Theme override to display a node.
#}
{{ attach_library('alkaline/article') }}
{%
  set classes = [
    'node',
    node.bundle|clean_class,
    node.isPromoted() ? 'promoted',
    node.isSticky() ? 'sticky',
    not node.isPublished() ? 'unpublished',
    view_mode|clean_class,
  ]
%}
<article{{ attributes.addClass(classes) }}>

  {{ title_prefix }}
  {% if not page %}
    <h2{{ title_attributes }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}

  {% if display_submitted %}
    <footer class="node__meta">
      {{ author_picture }}
      <div{{ author_attributes.addClass('node__submitted') }}>
        {% trans %}{{ author_name }}{{ date }}{% endtrans %}
        {{ metadata }}
      </div>
    </footer>
  {% endif %}

  <header>
    {{ header }}
  </header>

  <section{{ content_attributes.addClass('node__content') }}>
    {{ content }}
  </section>

</article>
