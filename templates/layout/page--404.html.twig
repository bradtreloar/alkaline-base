<div class="page">

  {% include '@alkaline/layout/includes/header.html.twig' %}

  {% if page.admin %}
    <div class="layer admin">
      <div class="region admin content-width">
        {{ page.admin }}
      </div>
    </div>
  {% endif %}

  {% if page.lead %}
    <div class="layer lead full-page">
      <div class="region lead">
        {{ page.lead }}
      </div>
    </div>
  {% endif %}

  <main class="layer main" role="main">

    <div id="content" class="region content">
      <a id="main-content" tabindex="-1"></a>
      {{ attach_library('alkaline/article') }}
      <article>
        <div class="body">
          <div class="body-section">
            <div class="text-formatted">
              <p>{{ page.content }}</p>
            </div>
          </div>
        </div>
      </article>
    </div>

  </main>

  {% include '@alkaline/layout/includes/footer.html.twig' %}

</div>
